<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}GoAvailable
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
			<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
		{% endblock %}
			<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
		{% block javascripts %}{% endblock %}
	</head>
	<body id='fond'>
		<div id="page-container">
			<div id="content-wrap">
				<nav class="navbar navbar-expand-lg navbar-dark color-nav">
					<div class="container">
						<a class="navbar-brand" href="{{ path('accueil') }}">GoAvailable</a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
								</li>
							{% if app.user and app.user.club != null %}
								<li class="nav-item active">
									<a class="nav-link" href=" {{ path('monclub') }} ">Mon club</a>
								</li>
							{% else %}
								<li class="nav-item active">
									<a class="nav-link" href=" {{ path('createclub') }} ">Créer mon club</a>
								</li>
							{% endif %}
							</ul>
							{% if app.user == null %}
								<ul class="navbar-nav ms-auto">
									<li class="nav-item active">
										<a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
									</li>
									<li class="nav-item active">
										<a class="nav-link" href="{{ path('connexion') }}">Connexion</a>
									</li>
								</ul>
							{% else %}
								<ul class="navbar-nav ms-auto">
									<li class="nav-item active">
										<a class="nav-link" href="{{ path('monprofil') }}">Mon Profil</a>
									</li>
									<li class="nav-item active">
										<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
									</li>
								</ul>
							{% endif %}
						</div>
					</div>
				</nav>
				{% block body %}{% endblock %}
			</div>
			<footer class="color-footer pt-3">
				<div class="container text-center text-md-end text-light">
					© 2020 Copyright by Mickael Dalle Pasqualine
				</div>
			</footer>
		</div>
	</body>
</html>
