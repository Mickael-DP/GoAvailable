{% extends 'base.html.twig' %}

{% block title %} Réinitialisation du Mot de passe | {{ parent() }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container">
        <div class="row">
            <div class="card col-10 col-md-6 col-lg-4 position-absolute top-50 start-50 translate-middle card-form">
                <div class="card-header card-header-bg">
                    <h3 class="text-center"> Réinitialisation du Mot de Passe</h3>
                </div>
                <div class="card-body ">
                    {{ form_start(requestForm) }}
                    <div class="d-flex flex-column align-items-center">
                        <div class="col-10">
                            {{ form_row(requestForm.email) }}
                        </div>
                        <div class="col-10">
                            <small>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
                        </div>
                        <button class="btn bg-btn mt-2">Envoyer</button>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>



{% endblock %}